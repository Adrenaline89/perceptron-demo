---
import "../styles/global.css";
import ThreeScene from "../components/ThreeScene.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio</title>
  </head>
  <body class="min-h-screen bg-gray-900">
    <ThreeScene />
    
    <main class="relative z-10 min-h-screen flex flex-col items-center justify-center">
      <section class="text-center px-4 py-16">
        <h1 class="text-5xl font-bold text-white">Paul Ebreo</h1>
        <p class="mt-4 text-lg text-white">I'm an author, entrepreneur and polymath passionate about learning and teaching.</p>
      </section>
      
      <!-- Centered navigation buttons -->
      <nav class="flex flex-col items-center gap-3 mt-8">
        <a href="/projects" class="inline-block px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
          </svg>
          Projects
        </a>
        
        <a href="/about" class="inline-block px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
          </svg>
          About
        </a>
      </nav>
    </main>
  </body>
</html>
<style>
  .text-shadow {
      text-shadow: 
          2px 2px 0 #000,
          2px 2px 0 #000,
          2px 2px 0 #000,
          2px 2px 0 #000;
  }
</style>